    // Function to display the corresponding note
    function generateNote() {
      const emotion = document.getElementById("emotionSelect").value;
      const noteContainer = document.getElementById("noteContainer");

      if (emotion) {
        const notes = emotionNotes[emotion];
        const randomNote = notes[Math.floor(Math.random() * notes.length)];
        noteContainer.textContent = randomNote;
      } else {
        noteContainer.textContent = '';
      }
    }

    // Adding floating emojis to the page
    const emojis = ["ğŸ€", "âœ¨", "ğŸŒ¸", "ğŸ’–", "ğŸŒŸ", "ğŸ’­", "ğŸŒˆ", "ğŸ‰"];
    let numEmojis = 15; // How many emojis you want to float on screen

    for (let i = 0; i < numEmojis; i++) {
      let emoji = emojis[Math.floor(Math.random() * emojis.length)];
      let emojiDiv = document.createElement("div");
      emojiDiv.className = "floating-emoji";
      emojiDiv.innerHTML = emoji;

      // Set random position
      emojiDiv.style.top = Math.random() * 100 + "vh"; // Random height
      emojiDiv.style.left = Math.random() * 100 + "vw"; // Random width

      document.body.appendChild(emojiDiv);
