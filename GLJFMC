      text-align: center;
      overflow: hidden;
      position: relative;
    }

    h1 {
      font-size: 3rem;
      color: #4a4a4a;
      margin-bottom: 1rem;
    }

    p {
      font-size: 1.5rem;
      color: #333;
      margin-bottom: 1.5rem;
    }

    select {
      padding: 0.5rem;
      font-size: 1.1rem;
      border: 1px solid #ccc;
      margin-bottom: 2rem;
    }

    .floating-emoji {
      position: absolute;
      font-size: 3rem;
      animation: floatEmoji 10s infinite linear;
      opacity: 0.8;
    }

    @keyframes floatEmoji {
      0% {
        transform: translateX(0) translateY(0);
        opacity: 1;
      }
      100% {
        transform: translateX(100vw) translateY(-100vh);
        opacity: 0;
      }
    }

    .note-container {
      font-size: 1.5rem;
      color: #555;
      margin-top: 2rem;
      font-style: italic;
    }
  </style>
